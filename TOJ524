#include<stdio.h>

int main()
{
	int x,y;
	int a,b;
	scanf("%d",&x);
	scanf("%d",&y);
	a=(x+y)/2;
	b=(x-y)/2;
	printf("a: %d, b:%d \n",a,b);
	return 0;
}
