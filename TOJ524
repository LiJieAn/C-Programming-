#include <iostream>
using namespace std;

int main()
{
    int x,y;
    int a,b;
    cin>>x>>y;
    a=(x+y)/2;
    b=(x-y)/2;
    cout<<"a: "<<a<<", b: "<<b<<"\n";
    return 0;
}

